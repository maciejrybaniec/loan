<section class="container bs-loan-provides" ng-if="loanProviders">
  <header class="bs-results-header text-center clearfix" id="bs-search-results">
    <div class="col-xs-12">
      <h3>
        <i class="fa fa-search"></i>
        wyniki porównywarki</h3>
      <p>kredyty gotówkowe
        <span ng-bind="searchArguments.value"></span>
        zł okres kredytowania
        <span ng-bind="searchArguments.time"></span>
        dni</p>
    </div>
  </header>
  <ul class="list-unstyled bs-compare-results">
    <li class="bs-loan-provider col-xs-12" ng-repeat="provider in loanProviders">
      <div class="col-xs-12 col-sm-3 col-md-3 bs-provider-logo">
        <img alt="{{provider.provider}}" ng-src="img/providers/{{provider.provider}}.png"/>
      </div>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <h5 class="bs-provider-label">rata</h5>
        <span class="bs-provider-value">{{provider.total | number : 2 }}
          zł</span>
      </div>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <h5 class="bs-provider-label">rrso</h5>
        <span class="bs-provider-value" ng-if="!provider.rrso">b/d</span>
        <span class="bs-provider-value" ng-if="provider.rrso">{{provider.rrso | number : 1 }}%</span>
      </div>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <h5 class="bs-provider-label">prowizja</h5>
        <span class="bs-provider-value">{{provider.commission | number : 2 }}
          zł</span>
      </div>
      <div class="col-xs-12 col-sm-4 col-sm-offset-8 col-md-offset-1 col-md-2 bs-button-box text-center">
        <a class="bs-compare-button" href="" title="Sprawdź ofertę">
          <span>sprawdź</span>
          <span>kredyt</span>
        </a>
      </div>
      <div class="col-xs-12 bs-provider-additional-container">
        <div class="bs-provider-additional clearfix">
          <span class="bs-additional-label">Szczegóły na e-mail</span>
          <span class="bs-additional-label">Szczegóły kredytu</span>
        </div>
      </div>
    </li>
  </ul>
</section>
